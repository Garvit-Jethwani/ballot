build:
  type: text
  content: |-
    #!/bin/sh
    cd $ROOST_WORK_DIR/git/Garvit-Jethwani/ballot
    export IMAGE_TAG=$ROOST_NAMESPACE
    export PATH=$PATH:/usr/bin:/usr/local/bin
    make build-ballot
    docker build -f ballot/Dockerfile -t ballot:$ROOST_ENV_ID ballot
deploy:
  type: text
  content: |-
    #!/bin/sh
    cd $ROOST_WORK_DIR/git/Garvit-Jethwani/ballot


    kubectl apply -f ballot/ballot.yaml
test:
  - name: ballot1
    configType: custom
    customType: commands
    url: https://reqres.in/api/users
    requestType: POST
    header: Content-Type:application/json
    body: '{"name":"Garvit"}'
    status: "202"
    response: ""
